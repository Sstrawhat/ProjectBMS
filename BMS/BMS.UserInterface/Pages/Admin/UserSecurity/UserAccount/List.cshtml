@using BMS.Application.Dtos.security;
@{
    var module = "User Security";
    var activePage = "User Account";
    var quickfilter = new UserSecurityQuickFilter();
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="row">
                    <div class="col">
                        <h4 class="page-title">@activePage</h4>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">@module</a></li>
                            <li class="breadcrumb-item active">@activePage</li>
                        </ol>
                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="accordion">
                        <div class="accordion-item">
                            <h5 class="accordion-header m-0" id="searchFilter">
                                <button class="accordion-button fw-semibold collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#searchFilterBody">
                                    Search Filter
                                </button>
                            </h5>
                            <div id="searchFilterBody" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="form-group mb-2">
                                        <label class="form-label">Resident Name</label>
                                        <input type="text" af-for="@quickfilter.Resident" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!--end card-body-->
            </div>
        </div>
    </div>
</div>